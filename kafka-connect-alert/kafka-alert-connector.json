{
    "name": "kafka-alert-connector",
    "config": {
        "connector.class": "io.confluent.connect.replicator.ReplicatorSourceConnector",
        "tasks.max": 1,
        "topics": "student_report",
        "key.converter": "org.apache.kafka.connect.storage.StringConverter",
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "src.kafka.bootstrap.servers": "kafka-in:9092",
        "dest.kafka.bootstrap.servers": "kafka-out:9092",
        "transforms": "Filter",
        "transforms.Filter.type": "io.confluent.connect.transforms.Filter$Value",
        "transforms.Filter.filter.condition": "$[?(@.exercise_score < 20)]",
        "transforms.Filter.filter.column": "exercise_score",
        "transforms.Filter.filter.type": "number"
    }
}
